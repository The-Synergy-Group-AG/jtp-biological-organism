# Automated Biological Consciousness Validation Environment

FROM python:3.9-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements-dev.txt add_requirements_dev_hypothesis.txt ./

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-dev.txt && \
    pip install --no-cache-dir -r add_requirements_dev_hypothesis.txt

# Copy project files
COPY src/ ./src/
COPY tests/ ./tests/
COPY pytest.ini ./

# Copy test harness configuration
COPY docker-compose.test.yml ./

# Set environment variables for test harness
ENV TEST_MODE=docker_integration
ENV VALIDATE_RUNNING_SERVICES=true
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1

# Create test results directory
RUN mkdir -p test-results

# Default command - run tests (will be overridden by docker-compose command)
CMD ["python", "-m", "pytest", "--version"]
